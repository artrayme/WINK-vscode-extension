//определение
concept_numerical_ray<- rrel_key_sc_element:
	... 
	(*
	=> nrel_main_idtf: [Опр.(числовой луч)]  (* <- lang_ru;; *);;
	<- sc_explanation;; 
	<= nrel_sc_text_translation: 
		...
		(*
		-> rrel_example: 
			[Числовой луч — луч, на котором точками обозначены натуральные числа. Расстояние между соседними точками равно единице измерения (единичный отрезок), которая задаётся условно. ](* <- lang_ru;; *);;
